{
	"compilerOptions": {
		"outDir": "./public/",
    "module": "esnext",
		"target": "es5",
		"sourceMap": true,
		"removeComments": true,
    "strict": true,
		"preserveConstEnums": true,
    "importHelpers": true,
		"noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
	},
  "include": ["src/**/*"],
	"exclude": ["node_modules", "public"]
}
