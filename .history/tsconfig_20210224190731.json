{
	"compilerOptions": {
		"outDir": "./public/",
    "target": "ES2016",
    "module": "ESNEXT",
    "lib": [
        "dom",
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "es2019",
        "es2020"
    ],
		"sourceMap": true,
		"removeComments": true,
    "strict": true,
		"preserveConstEnums": true,
    "importHelpers": true,
		"noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
	},
  "include": ["src/**/*"],
	"exclude": ["node_modules", "public"]
}
