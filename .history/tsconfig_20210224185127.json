{
	"compilerOptions": {
		"outDir": "./public/",
		"noImplicitAny": true,
    "module": "esnext",
		"target": "es5",
		"sourceMap": true,
		"removeComments": true,
		"preserveConstEnums": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
	},
  "include": ["src/**/*"],
	"exclude": ["node_modules"]
}
